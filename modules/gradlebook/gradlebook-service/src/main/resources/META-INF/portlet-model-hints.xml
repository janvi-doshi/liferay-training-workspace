<?xml version="1.0"?>

<model-hints>
	<model name="com.liferay.training.gradebook.model.Assignment">
		<field name="uuid" type="String" />
		<field name="assignmentId" type="long" />
		<field name="groupId" type="long" />
		<field name="companyId" type="long" />
		<field name="userId" type="long" />
		<field name="userName" type="String" />
		<field name="createDate" type="Date" />
		<field name="modifiedDate" type="Date" />
		<field localized="true" name="title" type="String" />
		<field localized="true" name="description" type="String" />
		<field name="dueDate" type="Date" />
	</model>
	<model name="com.liferay.training.gradebook.model.Submission">
		<field name="submissionId" type="long" />
		<field name="groupId" type="long" />
		<field name="companyId" type="long" />
		<field name="userId" type="long" />
		<field name="userName" type="String" />
		<field name="createDate" type="Date" />
		<field name="modifiedDate" type="Date" />
		<field name="assignmentId" type="long" />
		<field name="studentId" type="long" />
		<field name="submitDate" type="Date" />
		<field name="submissionText" type="String">
			<hint name="max-length">1024</hint>
		</field>
		<field name="comment" type="String" />
		<field name="grade" type="int" />
	</model>
</model-hints>